<div class="container">
	<div class="row">
		<div class="col-lg-3"> 
			<%= render 'info' %>
			<%= render 'books/new' %>
		</div>

		<div class="col-lg-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<th>image</th>
					<th>name</th>
					<th></th>
				</thead>

				<body>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, size: "50x50",fallback: "no_image.jpg"%></td>
						<td><%= user.name %></td>
						<td><%= link_to 'Show', user_path(user.id) %></td>
					</tr>
					<%end%>
				</body>
			</table>
		</div> 

	</div>
</div>                