<%= render "devise/shared/error_messages", resource: @book %>
<div class="container">
	<div class="row">
		<div class="col-xs-3"> 
			<%= render 'users/info' %>
			<%= render 'books/new' %>
		</div>

		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</thead>

				<body>
					<% @books.each do |book| %>
					<tr>
						<td><%= link_to user_path(book.user_id) do%>
							<%= attachment_image_tag get_user(book),:profile_image, size: "50x50",fallback: "no_image.jpg"%>
							<%end%>
						</td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<%end%>
				</body>
			</table>
		</div> 

	</div>
</div>                
