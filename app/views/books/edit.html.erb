
<div class="center-container">
	<h2>Editing Book</h2>
	<%= render "devise/shared/error_messages", resource: @book %>

	<%= form_for(@book) do |f| %>

	<h5>title</h5>
	<%= f.text_field :title %>
	<h5>Body</h5>
	<%= f.text_area :body %>
	<p></p>
	<%= f.submit 'Update Book', class:"blue-btn btn btn-primasry" %>

	<p class="edit-text">
		<span>
			<%= link_to "Show", book_path(@book) %>
		</span>

		| <span>
			<%= link_to "Back", books_path %>
		</span>
	</p>
	<% end %>
</div>

